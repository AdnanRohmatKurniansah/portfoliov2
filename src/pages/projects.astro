---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
const projects = [
  {
    title: "Fosi",
    img: "/projects/fosi.png",
    desc: "An online platform that offers discussion forums aimed at facilitating the exchange of knowledge and solutions related to programming problems",
    url: "https://fosi.vercel.app"
  },
  {
    title: "Digital Library",
    img: "/projects/digital-library.png",
    desc: "A digital library is an online platform that provides instant access to a wide collection of digital books, journals and other educational resources. Users can browse and read materials electronically",
    url: "https://digital-library-xi.vercel.app"
  },
  {
    title: "Imaginemate",
    img: "/projects/imaginemate.png",
    desc: "Explore a collection of imaginative and visually stunning images created by IMATE. Share your boundless imagination and artistic flair with others",
    url: "https://imatesite.vercel.app"
  },
  {
    title: "Tic Tac Toe Game",
    img: "/projects/tic-tac-toe.png",
    desc: "The “Tic Tac Toe Game” website is an online platform that provides a digital version of the classic game Tic Tac Toe, also known as X and O",
    url: "https://tic-tac-toe-gray-xi.vercel.app"
  },
]
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Latest Projects</div>
  </div>

  {projects.map((project, i) => (
    <HorizontalCard
      key={i}
      title={project.title}
      img={project.img}
      desc={project.desc}
      url={project.url}
      target="_blank"
    />
    <div class="divider my-0"></div>
  ))}
  
  <h1 class="pt-8 text-lg">See more projects in <a class="text-blue-600" href="https://github.com/AdnanRohmatKurniansah" target="_blank">my github</a></h1>
</BaseLayout>
